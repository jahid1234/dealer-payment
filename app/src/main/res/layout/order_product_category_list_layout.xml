<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:gravity="center"
    android:background="@android:color/transparent"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/order_product_category_cardView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="@color/product_backgound_color"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_title_big"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center"
                android:textColor="@color/product_name_color"
                android:src="@drawable/ic_widgets_black_24dp"
                android:padding="15dp"
                />

            <TextView
                android:id="@+id/product_category_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center"
                android:padding="1dp"
                android:text="Category"
                android:textColor="@color/product_name_color"
                android:textSize="15sp"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>